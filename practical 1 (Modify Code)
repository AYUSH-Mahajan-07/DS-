#include <stdio.h>
void main()
{
    int i, a[5] = {1, 2, 3, 4, 5};
    printf("before modify the elements in the array: \n");
    for (i = 0; i < 5; i++)
    {
        printf("%d\n", a[i]);
    }
    for (i = 0; i < 5; i++)
    {
        if (a[i] == 2)
        {
            a[i] = 7;
        }
        else if (a[i] == 4)
        {
            a[i] = 6;
        }
    }
    printf("after modify the element in array:\n");
    for (i = 0; i < 5; i++)
    {
        printf("%d\t", a[i]);
    }
    return 0;
}
